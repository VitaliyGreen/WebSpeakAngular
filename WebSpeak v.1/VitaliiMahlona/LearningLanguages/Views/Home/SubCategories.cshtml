@using DAL.Models
@model IEnumerable<DTO>
@{
    ViewData["Title"] = "SubCategory";
}

<div class="subCategories">
    @foreach (var subCategory in Model)
    {
    <div class="subCategory">
        <a href="~/Home/Categories/SubCategories/Tests?id=@subCategory.Id">
            <p>@subCategory.WordNativeLang (@subCategory.WordLearnLang)</p>
            <img src="../../@subCategory.Picture" width="128" height="128" alt="@subCategory.WordNativeLang">
        </a>
    </div>
}
</div>

<style>
    .subCategories {
        display: flex;
        flex-direction: column;
        text-align: center;
    }

    .subCategory {
        width: 225px;
        height: 225px;
        margin: auto;
    }
</style>