@model IEnumerable<DAL.Models.DTO>
@using DAL.Models

@{
    ViewData["Title"] = "Categories";
}

<div class="my-container">
    @foreach (DTO item in Model)
    {
        <div class="item box-shadow">
            <img class="img" src="../../@item.Picture" />
            <div class="title">
                <h2>@item.Translation (@item.Native)</h2>
            </div>
            <a href="/Categories/Subcategories?id=@item.Id"></a>
        </div>
    }
</div>

