@model IEnumerable<DAL.DTO.CategoriesDTO>
@using DAL.DTO

@{
    ViewData["Title"] = "WordsView";
}

<h1>@Model.ElementAt(0).TestName.ToString()</h1>

<h1>@Html.ActionLink("Statrt any Test for this Cat", "Test", "Home")</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Translation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PronounceNative)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PronounceLearn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TestName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (CategoriesDTO item in Model)
        {
        <tr>
            <td>
                @Html.ActionLink(item.Translation + "(" + item.Native + ")", "Manual", "Home", new { id = item.CategoryId })
            </td>
            <td>
                <img src="../../@item.Picture" width="300" height="300" />
            </td>
            <td>
                @item.PronounceNative
            </td>
            <td>
                @item.PronounceLearn
            </td>
            <td>
                @item.TestName
            </td>
        </tr>
        }
    </tbody>
</table>